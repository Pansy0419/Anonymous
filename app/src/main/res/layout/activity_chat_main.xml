<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anonymous.anonymous.Chat.ChatMainActivity">
    <include layout="@layout/layout_top"
        android:id="@+id/layout_top_chat" />
    <include layout="@layout/layout_bottom"
        android:id="@+id/layout_bottom_chat" />

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_top_chat"
        android:layout_above="@id/layout_bottom_chat">

    </android.support.v4.view.ViewPager>


</RelativeLayout>
