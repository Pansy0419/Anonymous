<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anonymous.anonymous.Chat.ChatActivity">
    <include layout="@layout/layout_top"
        android:id="@+id/layout_top_chat" />
    <include layout="@layout/layout_bottom"
        android:id="@+id/layout_bottom_chat" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.anonymous.anonymous.Chat.ChatBoxFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_top_chat"
        android:layout_above="@id/layout_bottom_chat"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


</android.widget.RelativeLayout>
